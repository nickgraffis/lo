<div id="remarksWrapper" style="box-shadow: -10px 0 20px -5px rgba(115,115,115,0.75);" class="fixed w-96 h-screen hidden ease-in-out inset-y-0 right-0 bg-white z-40 border-l border-gray-400 transform duration-150 translate-x-96 overflow-y-scroll">
  <div class="flex h-full flex-col">
    <div id="remarks" class="flex-grow">
      {{#each remarks}}
      <div class="p-4">
        <div class="flex items-center">
          <img src="{{ user.avatar }}" class="rounded-full h-6 w-6 object-cover mr-2" />
          <span class="text-sm text-gray-800 font-medium mx-2">{{ user.name }}</span>
          <span class="text-xs text-gray-600 mx-2">{{simple createdAt}}</span>
        </div>
        <p class="italic text-sm text-gray-600 pt-2">{{comment}}</p>
      </div>
    {{/each}}
    </div>
    <div id="inputWrapper" class="flex sticky bottom-0 w-full px-2 py-6 bg-white z-50 items-center">
      <input id="remarkInput" class="appearance-none focus:outline-none flex-grow px-2" placeholder="Add a comment..." />
      <div id="remarkSubmit" onclick="addRemark()" class="cursor-pointer p-2 bg-cyan-500 text-white rounded-sm">Submit</div>
    </div>
  </div>
</div>
