<div class="sticky top-0">
  <div class="border-b border-gray-300 pt-4 pb-6">
    <p class="text-gray-600 font-semibold text-sm uppercase mx-2">read articles that interest you</p>
    <div class="subjects flex flex-wrap my-4">
      {{#if tags}}
        {{#each tags }}
          <div onclick="filterByTag('{{tag}}', event)" class="border rounded-sm border-gray-300 text-sm text-gray-400 p-1 m-1 cursor-pointer">{{ tag }}</div>
        {{/each}}
      {{/if}}
    </div>
    <p class="text-lime-600 text-sm mx-2 cursor-pointer">See all topics</p>
  </div>
  {{> footer }}
</div>
