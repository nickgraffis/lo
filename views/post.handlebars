        <p class="text-gray-300 text-xs"> <span class="inline-block count transition-all transform duration-300">{{#if claps}}{{ claps }}{{/if}}</span> {{#if claps}} claps {{/if}}</p>
        <svg class="h-10 w-10 text-gray-400 hover:text-gray-600 mx-2 cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
      </div>
      <div class="flex items-end">
        <svg class="h-6 w-6 text-gray-500 hover:text-gray-600 mx-2 cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
        </svg>
        <svg onclick="bookmark(event, {{ id }})" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-2 cursor-pointer hover:text-gray-600 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
        </svg>
      </div>
    </div>
    <div class="flex items-center flex-wrap pt-6 pb-24">
      {{#each tags}}
        <div class="rounded-sm bg-gray-100 text-sm text-gray-500 p-2 m-1 cursor-pointer">{{capitolize tag }}</div>
      {{/each}}
    </div>
  </div>
</div>
<div class="bg-gray-800 w-full h-36 flex flex-col justify-center items-center">
  <p style="font-family: 'GFS Neohellenic', sans-serif;" class="group text-4xl text-lime-400 font-medium cursor-pointer">
    <span class="tracking-widest inline-block transform duration-150 group-hover:-translate-y-1">
      ΕΚΚΛΗΣΊΑ
    </span>
    <p style="font-family: 'Work Sans', sans-serif;" class="text-xl text-gray-300 font-medium px-2 cursor-pointer">
      gathering of all citizens
    </p>
  </p>

</div>
{{#section 'script'}}
  <script>
    function toText(node) {
     let tag = document.createElement('div')
     tag.innerHTML = node
     node = tag.innerText
     return node
    }
    let text = `{{{escape post.post }}}`
    document.querySelector('#article').innerHTML = text.replace(/\@\#\$\%\|/g, '{')
  </script>
{{/section}}
