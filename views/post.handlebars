{{> nav bg=bg-white logo=false name=user.name border='border-b border-gray-300'}}
<div class="w-full flex justify-center mt-12">
  <div class="w-full md:w-8/12 lg:w-6/12 lg:px-0 md:px-0 px-8">
    <p class="text-gray-800 text-5xl font-extrabold leading-normal">
      {{ post.title }}
    </p>
    <p class="text-gray-400 text-2xl leading-normal py-6">
      {{ post.tagline }}
    </p>
    <div class="user-info flex justify-between items-end py-6">
      <div class="flex items-center">
        <img src="{{ user.avatar }}" class="mr-2 h-14 w-14 rounded-full object-cover" />
        <p class="self-end text-lime-600 text-md mx-2">{{ user.name }}</p>
        <p class="self-end text-gray-400 text-md mx-2">{{ simple post.updatedAt }} · {{readTime post.post }} </p>
      </div>
      <div class="flex items-end">
        <svg class="h-6 w-6 text-gray-500 hover:text-gray-600 mx-2 cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
